<% if likes.any? %>
  <ul class="media-list">
    <% likes.each do |like| %>
    <div class="well">
      <li class ="media">
      <div class = "media-left">
        <img class = "media-object img-rounded" src="<%= gravatar_url(like.user, options = { size: 25 }) %>" alt="">
      </div>
      <div class ="media-body">
        <div>
          <%= link_to like.user.name, user_path(like.user) %> <span class="text-muted">posted at <%= like.created_at %></span>
        </div>
        <div>
          <p><%= like.content %></p>
        </div>
      </div>
      </li>
    </div>
    <%end%>
  </ul>
<% end %>
